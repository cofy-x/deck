{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2023"],
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "composite": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noEmit": false,

    "types": ["node", "vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
