{
  "name": "@cofy-x/deck-pilot-server",
  "version": "0.0.1",
  "description": "Filesystem API server for Deck",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cofy-x/deck.git"
  },
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "pilot-server": "./dist/cli.js"
  },
  "scripts": {
    "build:tsc": "tsc --build tsconfig.json",
    "watch:tsc": "tsc --build --watch tsconfig.json --preserveWatchOutput",
    "dev": "node --watch dist/cli.js",
    "start": "node dist/cli.js",
    "build": "pnpm build:tsc && node ../../../scripts/build_package.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.1",
    "minimatch": "^10.0.1",
    "yaml": "^2.6.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
