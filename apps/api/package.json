{
  "name": "@cofy-x/deck-api",
  "version": "0.0.1",
  "description": "Deck API",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cofy-x/deck.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build:tsc": "tsc --build tsconfig.json",
    "watch:tsc": "tsc --build --watch tsconfig.json --preserveWatchOutput",
    "start:dev": "nodemon --watch dist --delay 1 dist/main.js",
    "dev": "concurrently -k -n \"BUILD,SERVER\" -c \"blue,green\" \"pnpm run watch:tsc\" \"pnpm run start:dev\"",
    "start": "node dist/main.js",
    "build": "pnpm build:tsc && node ../../scripts/build_package.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@cofy-x/deck-core-ts": "workspace:*",
    "@fastify/static": "^9.0.0",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "bullmq": "^5.66.5",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.1",
    "ioredis": "^5.9.2",
    "nestjs-pino": "^4.5.0",
    "nestjs-zod": "^5.1.1",
    "pg": "^8.17.2",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@types/pg": "^8.16.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.24.0"
}
