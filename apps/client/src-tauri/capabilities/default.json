{
  "$schema": "../gen/schemas/client-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "opener:allow-reveal-item-in-dir",
    "shell:default",
    "http:default",
    "dialog:default",
    "process:default",
    "log:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://*" },
        { "url": "https://*" },
        { "url": "http://*:*/*" },
        { "url": "https://*:*/*" }
      ]
    }
  ]
}
