{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "deck",
  "version": "0.0.1",
  "identifier": "com.cofy-x.deck",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Deck",
        "width": 1440,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "entitlements": "./Entitlements.plist"
    },
    "externalBin": [
      "sidecars/opencode",
      "sidecars/pilot-server",
      "sidecars/pilot-bridge",
      "sidecars/pilot-host"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
